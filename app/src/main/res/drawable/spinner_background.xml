<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/putatoeBackground"/>
                    <stroke android:color="@color/putatoeGreenColor"
                        android:width="2dp"/>

                    <padding android:top="3dp"
                        android:right="3dp"
                        android:bottom="3dp"
                        android:left="3dp"/>

                </shape>
            </item>

            <item>
                <bitmap android:src="@drawable/spinner_down"
                    android:gravity="center|end"/>
            </item>
        </layer-list>
    </item>

</selector>